package br.com.sigapar1.util;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.concurrent.atomic.AtomicInteger;

public class ProtocoloUtil {

    private static final AtomicInteger seqDiario = new AtomicInteger(0);
    private static String ultimaChave = "";

    public static synchronized String gerar() {
        String hoje = LocalDate.now().format(DateTimeFormatter.ofPattern("yyyyMMdd"));

        if (!hoje.equals(ultimaChave)) {
            seqDiario.set(0);
            ultimaChave = hoje;
        }

        int seq = seqDiario.incrementAndGet();
        return hoje + "-" + String.format("%05d", seq);
    }
}
